<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bckimage"
    tools:context="com.example.al.turinrally.Challenge1.BadAnswerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Incorrect Answer!"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:layout_marginTop="158dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:id="@+id/buttontryagain"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Challenge"
        android:id="@+id/buttonnextchallenge"
        android:layout_marginTop="79dp"
        android:textStyle="italic"
        android:background="#ffd2e3ff"
        android:layout_below="@+id/buttontryagain"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Map"
        android:id="@+id/buttonretmap"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/buttonnextchallenge"
        android:layout_centerHorizontal="true"
        android:background="#ffc8deff"
        android:textStyle="bold|italic" />
</RelativeLayout>
