<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.al.turinrally.Challenge1.Challenge1Activity"
    android:background="@drawable/bckimage"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Challenge 1"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Which one of the following buildings is situated in Piazza Castello?"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="41dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton1"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/colosseum"
        android:longClickable="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/bigben"
        android:longClickable="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton3"
        android:layout_below="@+id/imageButton1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/piazzacastello"
        android:longClickable="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton4"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/bucuresti"
        android:longClickable="true" />

</RelativeLayout>
